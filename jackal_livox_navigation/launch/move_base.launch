<launch>
    <arg name="map_file" default="$(find magni_navigation)/maps/my_map.yaml"/>
    <node name="map_server" pkg="map_server" type="map_server" args="$(arg map_file)" />

    <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
        <rosparam file="$(find magni_navigation)/config/costmap_common_params.yaml" command="load" ns="global_costmap" />
        <rosparam file="$(find magni_navigation)/config/costmap_common_params.yaml" command="load" ns="local_costmap" />
        <rosparam file="$(find magni_navigation)/config/local_costmap_params.yaml" command="load" />
        <rosparam file="$(find magni_navigation)/config/global_costmap_params.yaml" command="load" />
        <rosparam file="$(find magni_navigation)/config/base_local_planner_params.yaml" command="load" />

        <remap from="cmd_vel" to="/jackal_velocity_controller/cmd_vel"/>
    </node>

</launch>
